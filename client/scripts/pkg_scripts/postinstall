#!/bin/bash
# Simple postinstall script
echo "OpenFrame: Starting postinstall script..."

# Create required directories and set permissions
mkdir -p "/Library/Logs/OpenFrame"
mkdir -p "/Library/Application Support/OpenFrame/run"

# Create empty log files
touch "/Library/Logs/OpenFrame/error.log"
touch "/Library/Logs/OpenFrame/output.log"

# Set proper permissions
chmod 755 "/Library/Logs/OpenFrame"
chmod 755 "/Library/Application Support/OpenFrame"
chmod 644 "/Library/Logs/OpenFrame/error.log"
chmod 644 "/Library/Logs/OpenFrame/output.log"
chmod 644 "/Library/LaunchDaemons/com.openframe.agent.plist"

echo "OpenFrame: Postinstall completed"
exit 0