{
    "title": "Grafana",
    "uid": "grafana",
    "schemaVersion": 41,
    "version": 1,
    "refresh": "30s",
    "tags": ["grafana", "monitoring"],
    "timezone": "",
    "time": { "from": "now-6h", "to": "now" },
    "panels": [
      {
        "type": "stat",
        "title": "Grafana Up",
        "id": 1,
        "gridPos": { "x": 0, "y": 0, "w": 6, "h": 6 },
        "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
        "targets": [
          {
            "expr": "sum(up{job=\"grafana-metrics\"})",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "none",
            "color": { "mode": "thresholds" },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "red", "value": null },
                { "color": "green", "value": 1 }
              ]
            }
          },
          "overrides": []
        },
        "options": {
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "fields": "",
            "values": false
          },
          "textMode": "auto",
          "colorMode": "value",
          "graphMode": "none",
          "justifyMode": "center"
        }
      },
      {
        "type": "timeseries",
        "title": "HTTP Request Rate",
        "id": 2,
        "gridPos": { "x": 6, "y": 0, "w": 9, "h": 6 },
        "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
        "targets": [
          {
            "expr": "rate(grafana_http_request_total[5m])",
            "refId": "A"
          }
        ]
      },
      {
        "type": "timeseries",
        "title": "Active Users",
        "id": 3,
        "gridPos": { "x": 15, "y": 0, "w": 9, "h": 6 },
        "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
        "targets": [
          {
            "expr": "grafana_active_users",
            "refId": "A"
          }
        ]
      },
      {
        "type": "timeseries",
        "title": "Dashboard Render Errors",
        "id": 4,
        "gridPos": { "x": 0, "y": 6, "w": 12, "h": 6 },
        "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
        "targets": [
          {
            "expr": "rate(grafana_rendering_dashes_failed_total[5m])",
            "refId": "A"
          }
        ]
      },
      {
        "type": "timeseries",
        "title": "Memory Usage",
        "id": 5,
        "gridPos": { "x": 12, "y": 6, "w": 12, "h": 6 },
        "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
        "targets": [
          {
            "expr": "process_resident_memory_bytes{job=\"grafana-metrics\"}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "bytes"
          },
          "overrides": []
        }
      }
    ],
    "templating": { "list": [] },
    "annotations": {
      "list": [
        {
          "type": "dashboard",
          "name": "Annotations & Alerts",
          "enable": true,
          "hide": true,
          "iconColor": "rgba(0, 211, 255, 1)",
          "builtIn": 1,
          "datasource": { "type": "grafana", "uid": "-- Grafana --" }
        }
      ]
    }
  }
  