{
  "title": "Promtail",
  "uid": "promtail",
  "schemaVersion": 41,
  "version": 1,
  "refresh": "30s",
  "tags": ["promtail", "logging", "monitoring"],
  "timezone": "",
  "time": { "from": "now-6h", "to": "now" },
  "panels": [
    {
      "type": "stat",
      "title": "Promtail Up",
      "id": 1,
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 6 },
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "targets": [
        {
          "expr": "sum(up{job=\"promtail-metrics\"})",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 1 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "textMode": "auto",
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "center"
      }
    },
    {
      "type": "timeseries",
      "title": "Lines Ingested",
      "id": 2,
      "gridPos": { "x": 6, "y": 0, "w": 9, "h": 6 },
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "targets": [
        {
          "expr": "rate(promtail_received_bytes_total[5m])",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Bytes Sent to Loki",
      "id": 3,
      "gridPos": { "x": 15, "y": 0, "w": 9, "h": 6 },
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "targets": [
        {
          "expr": "rate(promtail_sent_bytes_total[5m])",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Dropped Log Lines",
      "id": 4,
      "gridPos": { "x": 0, "y": 6, "w": 12, "h": 6 },
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "targets": [
        {
          "expr": "rate(promtail_dropped_entries_total[5m])",
          "refId": "A"
        }
      ]
    }
  ],
  "templating": { "list": [] },
  "annotations": {
    "list": [
      {
        "type": "dashboard",
        "name": "Annotations & Alerts",
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "builtIn": 1,
        "datasource": { "type": "grafana", "uid": "-- Grafana --" }
      }
    ]
  }
}