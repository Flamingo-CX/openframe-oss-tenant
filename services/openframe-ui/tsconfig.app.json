{
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "target": "ES2018",
    "module": "ESNext",
    "lib": ["ES2017", "DOM", "DOM.Iterable"],
    "moduleResolution": "bundler",
    "strict": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "types": ["@vue/runtime-core"],
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
