{
    "name": "openframe-agent",
    "version": "0.1.0",
    "channels": ["stable", "beta", "nightly"],
    "defaultChannel": "stable",
    "updateUrl": "https://releases.openframe.org",
    "checkForUpdatesOnStartup": true,
    "autoDownload": true,
    "autoInstall": false,
    "restartAfterUpdate": true,
    "files": [
        {
            "from": "target/release/openframe-agent",
            "to": "bin/openframe-agent"
        },
        {
            "from": "config/agent.toml",
            "to": "config/agent.toml"
        }
    ],
    "hooks": {
        "preUpdate": "scripts/pre-update.sh",
        "postUpdate": "scripts/post-update.sh"
    }
} 