{
  "title": "Kafka Dashboard",
  "editable": true,
  "refresh": "5s",
  "schemaVersion": 39,
  "style": "dark",
  "tags": [
    "kafka",
    "openframe"
  ],
  "panels": [
    {
      "title": "kafka HTTP Metrics",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      },
      "targets": [
        {
          "expr": "rate(http_server_requests_seconds_count{job=\"kafka\"}[1m])",
          "legendFormat": "{{method}} {{uri}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps"
        }
      }
    },
    {
      "title": "kafka JVM Memory Usage",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 0
      },
      "targets": [
        {
          "expr": "jvm_memory_used_bytes{job=\"kafka\", area=\"heap\"}",
          "legendFormat": "Heap Used"
        },
        {
          "expr": "jvm_memory_max_bytes{job=\"kafka\", area=\"heap\"}",
          "legendFormat": "Heap Max"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes"
        }
      }
    }
  ]
}