<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="true" scan="true">
    <!-- Wait for Spring properties to be available -->
    <springProperty scope="context" name="SPRING_APP_NAME" source="spring.application.name" defaultValue="app"/>
    <springProperty scope="context" name="LOKI_ADDRESS" source="loki.url" defaultValue="http://localhost:3100/loki/api/v1/push"/>
    <springProperty scope="context" name="LOG_PATH" source="log.path" defaultValue="logs" />
    
    <property name="SPRING_CONTAINER_IP" value="${CONTAINER_IP:-localhost}" />
    
    <!-- Console Appender -->
    <appender name="ConsoleAppender" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Base root with console only -->
    <root level="info">
        <appender-ref ref="ConsoleAppender" />
    </root>

    <include optional="true" resource="logging/shared-logback-includes.xml"/>
</configuration> 