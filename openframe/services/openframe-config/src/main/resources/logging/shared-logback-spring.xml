<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="true" scan="true">
    <springProperty scope="context" name="SPRING_APP_NAME" source="spring.application.name"/>
    <springProperty scope="context" name="LOG_PATH" source="logging.file.path" defaultValue="logs"/>
    <springProperty scope="context" name="LOKI_ADDRESS" source="loki.url" defaultValue="http://localhost:3100/loki/api/v1/push"/>
    
    <property name="SPRING_CONTAINER_IP" value="${CONTAINER_IP:-localhost}" />
    
    <!-- Include base configuration -->
    <include resource="logging/shared-logback-includes.xml"/>
</configuration> 